<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppName">
        <item name="android:textSize">42sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorPrimaryDark</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Tagline">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorMidGray</item>
    </style>

    <style name="GetStarted">
        <item name="android:textSize">21sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/getStarted</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">60dp</item>
    </style>

    <style name="FindRepsText">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginTop">60dp</item>
    </style>

    <style name="OrText">
        <item name="android:textSize">12sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#A8A8A8</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
    </style>

    <style name="FromZip">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">?attr/colorPrimaryDark</item>
    </style>

    <style name="ZipCode">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="Address">
        <item name="android:textSize">15sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#909090</item>
    </style>

    <style name="CityState">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#A5A5A5</item>
    </style>

    <style name="SenRep">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorPrimaryDark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">30dp</item>
    </style>

    <style name="SenatorName">
        <item name="android:textSize">19sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorPrimaryDark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">15dp</item>
    </style>

    <style name="CardParty">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="TwitterHandle">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <style name="Tweet">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorMidGray</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <style name="ProfSenatorName">
        <item name="android:textSize">23sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorPrimaryDark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <style name="ProfParty">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:layout_marginTop">1dp</item>
    </style>

    <style name="ProfCounty">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorMidGray</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:layout_marginTop">2dp</item>
    </style>

    <style name="ProfTerm">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#AFAFAF</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginTop">3dp</item>
    </style>

    <style name="CommitteesBills">
        <item name="android:textSize">19sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorPrimaryDark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>

    <style name="Committee">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorMidGray</item>
        <item name="android:layout_marginTop">2dp</item>
    </style>

    <style name="Date">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:layout_marginTop">2dp</item>
    </style>

    <style name="button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="button2">
        <item name="android:layout_width">155dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#404040</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">#DFDFDF</item>
    </style>

    <style name="button3">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#404040</item>
        <item name="android:background">#DFDFDF</item>
    </style>

    <style name="House">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#A5A5A5</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

</resources>
